{
  "extends": "@breadlee/tsconfig/react-library.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}